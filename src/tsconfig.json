{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "allowJs": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        // "esModuleInterop": true,
        "lib": [
            "es5",
            "dom",
            "scripthost"
        ],
    },
    "watchOptions": {
        "watchDirectory": "usefsevents"
    }
}